<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <title>Update List</title>
    <style>
        *
        {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
        }
        .main
        {
            width: 100%;
            height: 100vh;
            background: #fff;
        }
        .business-list
        {
            margin-top: 20px;
            margin-left: 40px;
            width: 80%;
            height: 80vh;
        }
        .business-list-title
        {
            font-size: 18px;
            margin-left: 49%;
            margin-top: 7%;
        }
        .table 
        {
            width: 90%;
            top: 0;
            margin-top: 2%;
            margin-left: 20%;
        }
        .table th,
        .table td 
        {
            padding: 8px;
            line-height: 20px;
            text-align: left;
            vertical-align: top;
            border-top: 1px solid #ddd;
        }
        .table th 
        {
            font-weight: bold;
        }
        .table thead th 
        {
            vertical-align: bottom;
        }
    </style>
</head>
<body>
    <section class="main">
        <div class="business-list">
            <h2 class="business-list-title">
                Business Contacts updation list
            </h2>
            <form action="" class="updation-form">
                <table class="table">
                    <tr>
                        <th>Contact Name</th>
                        <th>Contact Number</th>
                        <th>Email Address</th>
                        <th>Update Option</th>
                    </tr>
                    <tr>
                        <% for (var i = 0; i < user.contacts.length; i++) { %>
                            <tr>
                              <td><%= user.contacts[i].name %></td>
                              <td><%= user.contacts[i].phonenum %></td>
                              <td><%= user.contacts[i].email %></td>
                              <td><button type="edit" formmethod="post", formaction="/editcontact",>Edit</button>&nbsp;&nbsp;&nbsp;<button type="delete" formmethod="post", formaction="/deletecontact", name = phone:  <%= user.contacts[i].phonenum %>} >Delete</button></td>
                            </tr>    
                           <% } %>
                       
                    </tr>
                </table>
            </form>
        </div>
    </section>
</body>
</html>